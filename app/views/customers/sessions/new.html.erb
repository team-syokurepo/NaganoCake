<div class="top-all">
<div class="container">
  <div class="row">
      <div class="col-xs-offset-2">
        <h2 class="login-title">会員の方はこちらからログイン</h2>
         </div>
        </div>


              
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row">
                <%= f.label :メールアドレス, class: "col-xs-2 col-xs-offset-3 col-form-label" %>

                <div class="col-xs-5">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
                  
                </div>
               </div>

               <div class="form-group row">

                  <%= f.label :パスワード, class: "col-xs-2 col-xs-offset-3 col-form-label" %>
                    <div class="col-xs-5">
                      <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
                      <%= flash[:alert] %>
                    </div>
                </div>


              <div class="forget col-xs-offset-7">
               <%= link_to "=>パスワードを忘れた方はこちら", new_customer_session_path,class:"devise-link" %>
                
              </div>


              <div class="col-xs-offset-5">
                <%= f.submit "ログイン",class: "login-btn btn btn-info"%>
              </div>
            <% end %>
            <div class="col-xs-offset-2">
            <p class="login-title not-yet">登録がお済みでない方</p>
              
            </div>
            <div class="field col-xs-offset-4">
            <p><%= link_to "こちら  " , new_registration_path(resource_name),class:"devise-link"%>
            　から新規登録を行ってください。</p>
            <%= render "customers/shared/links" %>
              
            </div>
  </div>
</div>