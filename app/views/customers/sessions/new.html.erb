<div class="container">
  <div class="row">
      <div class="col-xs-offset-5">
        <h2 class="login-title">会員の方はこちらからログイン</h2>



            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-row">
                <%= f.label :メールアドレス %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :パスワード %>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>

               <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %>

              <div class="actions">
                <%= f.submit "ログイン" %>
              </div>
            <% end %>
            <p class="login-title">登録がお済みでない方</p>
            <p><%= link_to "こちら", new_registration_path(resource_name) %>     から新規登録を行ってください。</p>
            <%= render "customers/shared/links" %>
        </div>
  </div>
</div>