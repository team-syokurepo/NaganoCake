<div class="top-all">
<div class="container">
<div class="row">
	<div class="col-xs-2">
		<%= render 'homes/category_search', categories: @categories %>
	</div>
	<section class="customer-product-show">
		<% if @product.errors.any? %>
			<p><%= pluralize(@product.errors.count, "error") %>perrors prohibited this obj from being saved:</p>
	<ul>
		<% @product.errors.full_messages.each do |message| %>
			<li><%= message %></li>
	</ul>
	<% end %>
	<% end %>
		<div class="col-xs-4 col-xs-offset-1">
			<%= attachment_image_tag @product, :image, :fill, 300, 200, fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-4">
			<h2><%= @product.name %></h2>
			<p><%= @product.desctiption %></p>
			<p><span class="customer-product-price">￥<%= @product.price %></span>（税込）</p>
		</div>
		<div class="col-xs-offset-7">
			<%= form_with model: @cart, url: customers_cart_products_path do |f| %>
			<%= f.hidden_field :product_id, value: @product.id %>
			<div class="show-quantity">
				<%= f.number_field :quantity, min: 1 %><span>個</span>
			</div>
			<%= f.submit "カートに入れる", class: "btn btn-primary" %>
			<% end %>
		</div>
	</section>
</div>
</div>
</div>