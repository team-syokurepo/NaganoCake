<%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>
<div class="container">
   <div class="row">
      <h2 class="col-xs3">注文情報入力</h2>
   </div>

  <div class="row">
    <div class="col-xs1">
      <h3>支払い方法</h3>
    </div>
  </div>

        <div class="row">
         <p><%= f.radio_button :how_to_pay, true, {checked: true} %> クレジットカード</p>
       </div>
       <div class="row">
          <p><%= f.radio_button :how_to_pay, false, {} %> 銀行振込</p>
        </div>


   <div class="row">
    　 <h3 class="col-xs1">お届け先</h3>
  </div>

      　 <div class="row">
    <p>
      <label><%= f.radio_button :add, 1, checked: true, checked: "checked" %>ご自身の住所</label><br>
      <%= @customer.postal_code %>
      <%= @customer.address %>
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    </p>
  </div>

        <div class="row">
   	<p>
     <label><%= f.radio_button :add, 2 %>登録済住所から選択</label><br>登録済住所から選択</label>
     住所録から持ってくる
    </p>
  </div>
       <div class="row">
      <p><label><%= f.radio_button :add, 3 %>新しいお届け先</label></p>
    </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.fields_for :new_add do |na| %>
      <div class="row">
        <div class="col-lg-3">
          <strong>郵便番号(ハイフンなし)</strong>
        </div>
        <div class="col-lg-6">
          <%= na.text_field :post_code, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>住所</strong>
        </div>
        <div class="col-lg-6">
          <%= na.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>宛名</strong>
        </div>
        <div class="col-lg-6">
          <%= na.text_field :addressee, class: 'form-control' %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="row">
    <div class="col-lg-2 offset-lg-7">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  </div>
<% end %>



