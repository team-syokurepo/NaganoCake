<%= form_with(model: @order, local: true, url: {action: 'confirm'}) do |f| %>
<div class="container">
   <div class="row">
      <h2 class="col-xs3">注文情報入力</h2>
   </div>

  <div class="row">
    <div class="col-xs1">
      <h3>支払い方法</h3>
    </div>
  </div>
    

        <div class="row">
         <p><%= f.radio_button :how_to_pay, "クレジットカード支払い", {checked: true} %> クレジットカード</p>
       </div>
       <div class="row">
          <p><%= f.radio_button :how_to_pay, "銀行振込", {} %> 銀行振込</p>
        </div>


   <div class="row">
    　 <h3 class="col-xs1">お届け先</h3>
  </div>

      　 <div class="row">
    <p>
       <p><%= f.radio_button :address_option, "A", {} %> A</p>
      <%= label_tag("r1_1","ご自身の住所") %>
      <%= @customer.postal_code %>
      <%= @customer.address %>
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    </p>
  </div>

        <div class="row">

   	<p>

     <p><%= f.radio_button :address_option, "B", {} %> B</p>

     <%= label_tag("r1_2","登録済住所から選択") %>

     <div class="select">
     <%= f.collection_select :addressparams, @addressess, :id, :addressname, class: "form-group" %><br>
    </p>
  </div>
  </div>
       <div class="row">
      <p><%= f.radio_button :address_option, "C", {} %> C</p>
      <%= label_tag("r1_3","新しいお届け先") %>
    </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3">
          <strong>郵便番号(ハイフンなし)</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :postal_code, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>住所</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <strong>宛名</strong>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="row">
    <div class="col-lg-2 offset-lg-7">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  </div>
  <% end %>




