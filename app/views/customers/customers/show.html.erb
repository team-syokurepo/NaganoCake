<div class="customers_customers">
<div class="container">
    <div class="row">
      <h3 class="col-xs-offset-1 row_top">マイページ</h3>
    </div>

    <div class="row row_list">
      <h4 class="col-xs-2">登録情報</h4>
      <%= link_to '編集する', edit_customers_customers_path, class: "btn btn-info" %>
      <%= link_to 'パスワードを変更する', edit_customer_password_path, class: "btn btn-info" %>
    </div>

      <table class="table table-bordered">
          <tr>
            <th class="col-xs-2 customers_table_term">氏名</th>
            <th><%= @customer.last_name %>
              <%= @customer.first_name %></th>
          </tr>
          <tr>
            <th class="customers_table_term">カナ</th>
            <th><%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th class="customers_table_term">郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th class="customers_table_term">住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th class="customers_table_term">電話番号</th>
            <th><%= @customer.phone_number %></th>
          </tr>
          <tr>
            <th class="customers_table_term">メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
      </table>

	  <div class="row row_list">
      <h4 class="col-xs-2">配送先</h4>
      <%= link_to '一覧を見る', customers_address_lists_path, class: "btn btn-info" %>
	  </div>

	  <div class="row row_list">
      <h4 class="col-xs-2">注文履歴</h4>
      <%= link_to '一覧を見る', customers_orders_path, class: "btn btn-info" %>
    </div>
</div>
</div>