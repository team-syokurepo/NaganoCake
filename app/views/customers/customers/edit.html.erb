<div class="top-all">
<div class="container">
    <div class="row">
      <h3 class="col-xs-offset-1">登録情報編集</h3>
    </div>

<!-- 警告文後で追加 -->

    <%= form_for @customer do |f| %>
	    <div class="row">
	      <h6 class="col-xs-2">名前</h4>
	      <%= f.label :（姓）, class:"col-xs-offset-2" %>
    	  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>

    	  <%= f.label :(名), class:"col-xs-offset-4" %>
          <%= f.text_field :first_name, autocomplete: "first_name" %>
	    </div>
	<% end %>






    <div class="row">
      <%= link_to '編集内容を保存する', customers_customers_path, class: "btn btn-info col-xs-offset-1" %>
      <%= link_to ' 退会する', customers_customers_quit_path, class: "btn btn-danger glyphicon glyphicon-warning-sign col-xs-offset-4" %>
    </div>

</div>
</div>