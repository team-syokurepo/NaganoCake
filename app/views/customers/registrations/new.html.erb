<div class="top-all">
<div class="continer">
  <div class="row">
    <div class="offset-3">

 </div>
    
  </div>
  
</div>


<h2 class="registration-title">新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :名前（姓）%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name
" %>
  </div>

  <div class="field">
    <%= f.label :名 %>
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ（セイ） %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メイ %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions btn btn-success">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<h2 class="registration-title">既に登録済みの方</h2>
<p><%= link_to "こちら", new_session_path(resource_name) %> からログインしてください。</p>
</div>
