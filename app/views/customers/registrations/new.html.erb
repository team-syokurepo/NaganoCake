<div class="top-all">
 <div class="continer">
  <div class="row">
    <h2 class="registration-title col-xs-offset-2">新規会員登録</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="registration-form-group col-xs-offset-1">
          <div class="r-form row">
          <%= f.label :名前　　　　　　　　　　　　　（姓）,class: "col-xs-3"%>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-contorol col-xs-2" %>
          <%= f.label :　（名）,class: "col-xs-1" %>
          <%= f.text_field :first_name, autocomplete: "first_name",class: "form-contorol col-xs-2" %>
          </div>
          <div class="r-form row">
            <%= f.label :フリガナ　　　　　　　　　　（セイ）,class: "col-xs-3" %>
            <%= f.text_field :last_name_kana, autocomplete: "last_name_kana",class: "form-contorol col-xs-2" %>
            <%= f.label :（メイ）,class: "col-xs-1" %>
            <%= f.text_field :first_name_kana, autocomplete: "first_name_kana",class: "form-contorol col-xs-2" %>
      </div>
          <div class="r-form row">
            <%= f.label :メールアドレス ,class: "col-xs-3"%>
            <%= f.email_field :email, autocomplete: "email", class: "form-contorol col-xs-2" %>
          </div>
      <div class="r-form row">
        <%= f.label :郵便番号（ハイフンなし）,class: "col-xs-3" %>
        <%= f.text_field :postal_code, autocomplete: "postal_code",class: "form-contorol col-xs-2" %>
      </div>
      <div class="r-form row">
        <%= f.label :住所 ,class: "col-xs-3"%>
        <%= f.text_field :address, autocomplete: "address", class: "form-contorol col-xs-5" %>
      </div>

      <div class="r-form row">
        <%= f.label :電話番号（ハイフンなし）,class: "col-xs-3" %>
        <%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-contorol col-xs-2" %>
      </div>
      <div class="r-form row">
        <%= f.label :パスワード（６文字以上）,class: "col-xs-3" %>
        <% if @minimum_password_length %>
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-contorol col-xs-2" %>
      </div>

      <div class="r-form row">
        <%= f.label :パスワード（確認用）,class: "col-xs-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-contorol col-xs-2" %>
      </div>
    </div>
      </div>


      <div class="actions">
        <%= f.submit "新規登録", class: "registration-btn btn btn-success form-contorol col-xs-offset-4" %>
      </div>
    <% end %>
    <h2 class="registration-title col-xs-offset-2">既に登録済みの方</h2>
    <p class="col-xs-offset-3"><%= link_to "こちら", new_session_path(resource_name), class: "devise-link"%>　　からログインしてください。</p>
    </div>
  </div>
</div>



