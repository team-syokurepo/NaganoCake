<div class="admins_customers">
<div class="container">
    <div class="row">
      <h3 class="col-xs-offset-1"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>

      <table class="table table-bordered">

          <tr>
            <th class="col-xs-2">顧客ID</th>
            <td><%= @customer.id %>
            	<% unless @customer.deleted_at? %>
		          <div class="btn btn-primary btn-xs">有効会員</td>
		        <% else %>
		          <div class="btn btn-warning btn-xs">無効会員</td>
		        <% end %>
            </td>
          </tr>
          <tr>
          	<th>氏名</th>
          	<th><%= @customer.last_name %><%= @customer.first_name %></th>
          </tr>
          <tr>
          	<th>フリガナ</th>
          	<th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
          </tr>
          <tr>
          	<th>郵便番号</th>
          	<th><%= @customer.postal_code %></th>
          </tr>
          <tr>
          	<th>住所</th>
          	<th><%= @customer.address %></th>
          </tr>
          <tr>
          	<th>電話番号</th>
          	<th><%= @customer.phone_number %></th>
          </tr>
          <tr>
          	<th>メールアドレス</th>
          	<td><%= @customer.email %></td>
          </tr>

	  </table>

      <div class="row">
		<%= link_to '編集する', edit_admins_customer_path(@customer), class: "btn btn-info" %>
		<%= link_to '注文履歴一覧を見る', admins_order_path(@customer), class: "btn btn-info" %>
	  </div>


</div>
</div>