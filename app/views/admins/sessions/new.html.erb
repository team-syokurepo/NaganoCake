

<div class="top-all">
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1">
        <h2 class="admin-title col-xs-3">管理者ログイン</h2>
         </div>
        </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row">
                <%= f.label :メールアドレス, class: "col-xs-2 col-xs-offset-2 col-form-label" %>

                <div class="col-xs-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
                </div>
               </div>

               <div class="form-group row">

                  <%= f.label :パスワード, class: "col-xs-2 col-xs-offset-2 col-form-label" %>
                    <div class="col-xs-4">
                      <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
                      <%= flash[:alert] %>
                    </div>
                </div>
                <div class="col-xs-offset-5">
                <%= f.submit "ログイン",class: "admin-login-btn btn btn-info"%>
              </div>
            <% end %>
            </div>
  </div>
</div>
