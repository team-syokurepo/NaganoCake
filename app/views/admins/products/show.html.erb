<div class="top-all">
<div class="container">
<div class="row">
	<section class="product-show">
		<h3>商品詳細</h3>
		<div class="col-xs-4 col-xs-offset-2">
			<%= attachment_image_tag @product, :image, :fill, 100, 130, fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-6">
			<%= f.label :商品名　　　　 %>
			<%= @product.name %><br>
			<%= f.label :商品説明　　　, class: "form-group" %>
			<%= @product.desctiption, class: "form-group" %><br>
			<%= f.label :ジャンル　　　 %>
			<%= @product.category_id, @category, class: "form-group" %><br>
			<%= f.label :税抜価格　　　 %>
			<%= @product.price, class: "form-group" %>円<br>
			<%= f.label :販売ステータス %>
			<%= @product.status, class: "form-group" %>
		</div>
		<div class="col-xs-offset-10">
			<%= link_to "編集する", edit_admins_product_path(@product),class: "btn btn-info" %>
		</div>
		<% end %>
	</section>
</div>