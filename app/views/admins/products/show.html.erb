<div class="top-all">
<div class="container">
<div class="row">
	<section>
		<h3 class="col-xs-offset-2 product-show">商品詳細</h3>
		<div class="col-xs-4 col-xs-offset-2">
			<%= attachment_image_tag @product, :image, :fill, 300, 200, fallback: "no_image.jpg" %>
		</div>
		<div class="col-xs-6">
			<table class="table">
				<tr>
					<td style="border-top: none;">商品名</td>
					<td style="border-top: none;" class="product"><%= @product.name %></td>
				</tr>
				<tr>
					<td style="border-top: none;">商品説明</td>
					<td style="border-top: none;" class="product"><%= @product.desctiption %></td>
				</tr>
				<tr>
					<td style="border-top: none;">ジャンル</td>
					<td style="border-top: none;" class="product"><%= Category.find(@product.category.id).name %></td>
				</tr>
				<tr>
					<td style="border-top: none;">税抜価格（税込価格）</td>
					<td style="border-top: none;" class="product"><%= @product.price.to_s(:delimited) %>（<%= @product_price.floor.to_s(:delimited) %>）円</td>
				</tr>
				<tr>
					<td style="border-top: none;">販売ステータス</td>
					<% if @product.status == true %>
						<td style="border-top: none;" class="product"><%= "販売中" %></td>
					<% else %>
						<td style="border-top: none;" class="product"><%= "販売停止中" %></td>
					<% end %>
				</tr>
			</table>
		</div>
		<div class="col-xs-offset-10">
			<%= link_to "編集する", edit_admins_product_path(@product),class: "btn btn-info" %>
		</div>
	</section>
</div>
</div>
</div>