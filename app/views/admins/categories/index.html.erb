<div class="top-all">
<div class="continer">
	<div class="row">
		<div class="col-xs-offset-1 col-xs-4">

	<h2>ジャンル一覧・追加</h2>
	<div class="genre-form">
		<%= form_with model:@category,url: admins_categories_path,local: true do |form| %>
		<%= form.label :"ジャンル" %>
		<%= form.text_field :name %>
		<%= form.radio_button :valid_flag, :true, checked: true %>
		<%= form.label :valid_flag, "有効",{value: :valid} %>
		<%= form.radio_button :valid_flag, :false %>
		<%= form.label :valid_flag, "無効",{value: :invalid} %>
		<%= form.submit "追加",class: "btn btn-info" %>
		<% end %>
	</div>


	<% if @category.errors.any? %>
	  <div class="alert alert-warning">
	    <ul>
	    	<%= @category.errors.count %>件のエラー
	      <% @category.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
　　<% end %>

	<table class="table">
		<thead style="background-color: #112a63;">
			<tr style="color: #f1efe7;">
				<th class="col-xs-3">ジャンル</th>
				<th class="col-xs-3">状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category| %>
			<tr>
				<td><%= category.name %></td>
				<td>
					<% if category.valid_flag == true %>
						<p>有効</p>
					<% else %>
						<p>無効</p>
					<% end %>
				</td>
				<td>
					<%= link_to "編集する", edit_admins_category_path(category),class: "btn btn-primary" %>
				</td>
			</tr>
		<% end %>

		</tbody>
	</table>
	</div>
		
</div>
</div>
</div>
